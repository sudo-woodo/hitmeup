{% extends "base.jinja" %}

{% block title %}
    Calendar
{% endblock %}

{% block content %}
    <div id='calendar'></div>

    <div id="createEventModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Event Creation</h4>
                </div>
                <div class="modal-body">

                    <!--INSERT THE FORM HERE -->
                    <form id="eventform" method="post">
                        {% csrf_token %}



                    </form>

                    <p>Do you want to save your event?</p>
                    <p class="text-warning"><small>If you don't save, your changes will be lost.</small></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <div id="eventDetailModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Event Detail</h4>
                    <span id="start-time"></span> &mdash; <span id="end-time"></span>
                </div>
                <div class="modal-body">
                    <dl class="dl-horizontal">
                        <dt><span class="label label-default">Location</span></dt>
                        <dd id="location"></dd>
                        <dt><span class="label label-default">Calendar</span></dt>
                        <dd id="cal-title"></dd>
                        <dt><span class="label label-default">Description</span></dt>
                        <dd id="description"></dd>
                        <dt><span class="label label-default">Who's Going</span></dt>
                        <dd id="attendees"></dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

{% endblock %}