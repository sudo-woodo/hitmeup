<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">

        {# Don't let mobile users resize #}
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

        {# Metadata #}
        <title>{% block title %}HitMeUp{% endblock %}</title>
        <meta name="description" content="HitMeUp">

        {# Icon stuff #}
        {# Generated at http://realfavicongenerator.net/favicon?file_id=p19jo4l1ij1cg71his1mng1qdhkln6#.VTt5dycVhBc #}
        <link rel="shortcut icon" type="image/ico" href="{{ static('hitmeup/icon/favicon.ico') }}"/>
        <link rel="apple-touch-icon" href="{{ static('hitmeup/icon/apple-touch-icon.png') }}">
        <link rel="apple-touch-icon" sizes="57x57" href="{{ static('hitmeup/icon/apple-touch-icon-57x57.png') }}">
        <link rel="apple-touch-icon" sizes="60x60" href="{{ static('hitmeup/icon/apple-touch-icon-60x60.png') }}">
        <link rel="apple-touch-icon" sizes="72x72" href="{{ static('hitmeup/icon/apple-touch-icon-72x72.png') }}">
        <link rel="apple-touch-icon" sizes="76x76" href="{{ static('hitmeup/icon/apple-touch-icon-76x76.png') }}">
        <link rel="apple-touch-icon" sizes="114x114" href="{{ static('hitmeup/icon/apple-touch-icon-114x114.png') }}">
        <link rel="apple-touch-icon" sizes="120x120" href="{{ static('hitmeup/icon/apple-touch-icon-120x120.png') }}">
        <link rel="apple-touch-icon" sizes="144x144" href="{{ static('hitmeup/icon/apple-touch-icon-144x144.png') }}">
        <link rel="apple-touch-icon" sizes="152x152" href="{{ static('hitmeup/icon/apple-touch-icon-152x152.png') }}">
        <link rel="apple-touch-icon" sizes="180x180" href="{{ static('hitmeup/icon/apple-touch-icon-180x180.png') }}">
        <link rel="icon" type="image/png" href="{{ static('hitmeup/icon/favicon-32x32.png" sizes="32x32') }}">
        <link rel="icon" type="image/png" href="{{ static('hitmeup/icon/favicon-194x194.png" sizes="194x194') }}">
        <link rel="icon" type="image/png" href="{{ static('hitmeup/icon/favicon-96x96.png" sizes="96x96') }}">
        <link rel="icon" type="image/png" href="{{ static('hitmeup/icon/android-chrome-192x192.png" sizes="192x192') }}">
        <link rel="icon" type="image/png" href="{{ static('hitmeup/icon/favicon-16x16.png" sizes="16x16') }}">
        <link rel="manifest" href="{{ static('hitmeup/icon/manifest.json') }}">
        <link rel="shortcut icon" href="{{ static('hitmeup/icon/favicon.ico') }}">
        <meta name="msapplication-TileColor" content="#b91d47">
        <meta name="msapplication-TileImage" content="{{ static('hitmeup/icon/mstile-144x144.png') }}">
        <meta name="msapplication-config" content="{{ static('hitmeup/icon/browserconfig.xml') }}">
        <meta name="theme-color" content="#267f00">

        {# CSS - Vendor #}
        <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
        {% for sheet in ext_css %}
            <link rel="stylesheet" type="text/css" href="{{ sheet }}">
        {% endfor %}

        {# CSS - Custom #}
        <link rel="stylesheet" type="text/css" href="{{ static('hitmeup/css/base.css') }}">
        {% for sheet in css %}
            <link rel="stylesheet" type="text/css" href="{{ static(sheet) }}">
        {% endfor %}

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        {# Stick the navbar in #}
        {% include 'navbar.jinja' %}

        {# Where the main content of the page goes #}
        {% block content %}{% endblock %}

        {# JS - Variables stored in $HMU #}
        <script type="application/javascript">
            window.$HMU = {{ js_data|default('{}')|to_json }};
        </script>

        {# JS - Vendor #}
        <script type="application/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        <script type="application/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/3.7.0/lodash.min.js"></script>
        <script type="application/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
        {% for script in ext_js %}
            <script type="application/javascript" src="{{ script }}"></script>
        {% endfor %}

        {# JS - Custom #}
        <script type="application/javascript" src="{{ static('hitmeup/js/base.js') }}"></script>
        {% for script in js %}
            <script type="application/javascript" src="{{ static(script) }}"></script>
        {% endfor %}

        {# JSX - Custom #}
        {% for script in jsx %}
            <script type="text/jsx" src="{{ static(script) }}"></script>
        {% endfor %}
    </body>
</html>
